{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title":"Elevation distribution for different volcano types",
  "data": {
    "url": "https://raw.githubusercontent.com/kste0015/FIT3179_Assignment/main/data/volcano.csv"
  },
  "transform": [
    {
      "calculate": "replace(datum.primary_volcano_type,/\\?|\\(.*\\)$/,'')",
      "as": "VolcanoType"
    }
  ],
  "encoding": {
    "x": {
      "field": "VolcanoType",
      "type": "nominal",
      "title": "Volcano Type"
    },
    "y": {
      "field": "elevation",
      "type": "quantitative",
      "title": "Elevation (m)"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "boxplot",
        "extent": "min-max"
      },
      "encoding": {
        "color": {
          "field": "VolcanoType",
          "type": "nominal",
          "legend": null,
          "scale": {
            "scheme": "tableau20"
          }
        }
      }
    }
  ]
}
