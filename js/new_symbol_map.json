{
  "$schema":"https://vega.github.io/schema/vega-lite/v4.json",
  "width":800,
  "height":500,
  "title":"Volcanic Eruptions",
  "projection":{
    "type":"equalEarth"
  },
  "params":[
    {
      "name":"show_volcanoes",
      "value":true,
      "bind":{
        "input":"checkbox",
        "name":"Show Volcanoes"
      }
    },
    {
      "name":"show_eruptions",
      "value":true,
      "bind":{
        "input":"checkbox",
        "name":"Show Eruptions"
      }
    },
    {
      "name":"region_select",
      "bind":{
        "input":"select",
        "options":[
          null,
          "Africa and Red Sea",
          "Alaska",
          "Antarctica",
          "Atlantic Ocean",
          "Canada and Western USA",
          "Hawaii and Pacific Ocean",
          "Iceland and Arctic Ocean",
          "Indonesia",
          "Japan, Taiwan, Marianas",
          "Kamchatka and Mainland Asia",
          "Kuril Islands",
          "Mediterranean and Western Asia",
          "Melanesia and Australia",
          "MÃ©xico and Central America",
          "Middle East and Indian Ocean",
          "New Zealand to Fiji",
          "Philippines and SE Asia",
          "South America",
          "West Indies"
        ],
        "labels":[
          "Show All",
          "Africa and Red Sea",
          "Alaska",
          "Antarctica",
          "Atlantic Ocean",
          "Canada and Western USA",
          "Hawaii and Pacific Ocean",
          "Iceland and Arctic Ocean",
          "Indonesia",
          "Japan, Taiwan, Marianas",
          "Kamchatka and Mainland Asia",
          "Kuril Islands",
          "Mediterranean and Western Asia",
          "Melanesia and Australia",
          "Mexico and Central America",
          "Middle East and Indian Ocean",
          "New Zealand to Fiji",
          "Philippines and SE Asia",
          "South America",
          "West Indies"
        ],
        "name":"Select Region"
      }
    },
    {
      "name":"VolcanoTypeSelection",
      "bind":{
        "input":"select",
        "options":[
          null,
          "Caldera",
          "Complex",
          "Compound",
          "Crater rows",
          "Fissure vent",
          "Lava cone",
          "Lava dome",
          "Maar",
          "Pyroclastic cone",
          "Pyroclastic shield",
          "Shield",
          "Stratovolcano",
          "Subglacial",
          "Submarine",
          "Tuff cone",
          "Volcanic field"
        ],
        "labels":[
          "Show All",
          "Caldera",
          "Complex",
          "Compound",
          "Crater rows",
          "Fissure vent",
          "Lava cone",
          "Lava dome",
          "Maar",
          "Pyroclastic cone",
          "Pyroclastic shield",
          "Shield",
          "Stratovolcano",
          "Subglacial",
          "Submarine",
          "Tuff cone",
          "Volcanic field"
        ],
        "name":"Select Volcano Type: "
      }
    },
    {
      "name":"year_since",
      "value":1900,
      "bind":{
        "input":"range",
        "min":-12000,
        "max":2020,
        "step":100,
        "name":"Eruptions Since (year)"
      }
    }
  ],
  "layer":[
    {
      "data":{
        "url":"https://raw.githubusercontent.com/kste0015/FIT3179_Assignment/main/js/world_low.geo.json",
        "format":{
          "type":"topojson",
          "feature":"world_low"
        }
      },
      "mark":{
        "type":"geoshape",
        "fill":"lightgray",
        "stroke":"white"
      }
    },
    {
      "data":{
        "url":"https://raw.githubusercontent.com/kste0015/FIT3179_Assignment/main/data/eruptions.csv"
      },
      "encoding":{
        "longitude":{
          "field":"longitude",
          "type":"quantitative"
        },
        "latitude":{
          "field":"latitude",
          "type":"quantitative"
        }
      },
      "transform":[
        {
          "filter":"show_eruptions"
        },
        {
          "filter":{
            "field":"vei",
            "valid":true
          }
        },
        {
          "filter":"datum.start_year >= year_since"
        },
        {
          "calculate":"datetime(datum.end_year,datum.end_month-1,datum.end_day)",
          "as":"end_date"
        },
        {
          "calculate":"datetime(datum.start_year,datum.start_month-1,datum.start_day)",
          "as":"start_date"
        },
        {
          "calculate":"floor((time(datum.end_date)-time(datum.start_date))/86400000)",
          "as":"Duration"
        },
        {
          "filter":{
            "field":"Duration",
            "valid":true
          }
        },
        {
          "lookup":"volcano_number",
          "from":{
            "data":{
              "url":"https://raw.githubusercontent.com/kste0015/FIT3179_Assignment/main/data/volcano.csv"
            },
            "key":"volcano_number",
            "fields":[
              "region",
              "primary_volcano_type"
            ]
          }
        },
        {
          "filter":"region_select ? datum.region == region_select : true"
        },
        {
          "calculate":"replace(datum.primary_volcano_type,/\\?|\\(.*\\)$/,'')",
          "as":"VolcanoType"
        },
        {
          "filter":"VolcanoTypeSelection ? datum.VolcanoType == VolcanoTypeSelection : true"
        }
      ],
      "layer":[
        {
          "mark":{
            "type":"circle",
            "color":"gold",
            "opacity":0.3,
            "stroke":"black",
            "strokeOpacity":0.2
          },
          "encoding":{
            "size":{
              "field":"vei",
              "type":"ordinal",
              "legend":{
                "title":"Volcano Explosivity Index"
              },
              "scale":{
                "type":"ordinal",
                "range":[
                  64,
                  128,
                  256,
                  512,
                  1024,
                  2048,
                  4096,
                  8192
                ]
              }
            },
            "tooltip":[
              {
                "field":"volcano_name",
                "type":"nominal",
                "title":"Volcano Name"
              },
              {
                "field":"vei",
                "type":"ordinal",
                "title":"Volcano Explosivity Index"
              },
              {
                "field":"start_date",
                "type":"temporal",
                "title":"Eruption start date"
              },
              {
                "field":"Duration",
                "type":"quantitative",
                "title":"Eruption duration in days"
              },
              {
                "field":"latitude",
                "type":"quantitative",
                "title":"Latitude"
              },
              {
                "field":"longitude",
                "type":"quantitative",
                "title":"Longitude"
              }
            ]
          }
        },
        {
          "mark":{
            "type":"text",
            "align":"right",
            "baseline":"middle",
            "dx":-12,
            "fontSize":11.5,
            "fontStyle":"italic"
          },
          "encoding":{
            "text":{
              "field":"volcano_name",
              "type":"nominal"
            },
            "color":{
              "value":"black"
            },
            "opacity":{
              "condition":{
                "test":"datum.vei >= 6",
                "value":1
              },
              "value":0
            }
          }
        }
      ]
    },
    {
      "data":{
        "url":"https://raw.githubusercontent.com/kste0015/FIT3179_Assignment/main/data/volcano.csv"
      },
      "encoding":{
        "longitude":{
          "field":"longitude",
          "type":"quantitative"
        },
        "latitude":{
          "field":"latitude",
          "type":"quantitative"
        }
      },
      "transform":[
        {
          "filter":"show_volcanoes"
        },
        {
          "filter":"datum.last_eruption_year >= year_since"
        },
        {
          "filter":"region_select ? datum.region == region_select : true"
        },
        {
          "calculate":"replace(datum.primary_volcano_type,/\\?|\\(.*\\)$/,'')",
          "as":"VolcanoType"
        },
        {
          "filter":"VolcanoTypeSelection ? datum.VolcanoType == VolcanoTypeSelection : true"
        }
      ],
      "layer":[
        {
          "mark":{
            "type":"point",
            "shape":"triangle",
            "filled":true,
            "opacity":0.9,
            "stroke":"white",
            "size":200
          },
          "encoding":{
            "color":{
              "field":"last_eruption_year",
              "type":"quantitative",
              "legend":{
                "title":"Year Since Last Eruption"
              },
              "scale":{
                "scheme":"reds"
              }
            },
            "tooltip":[
              {
                "field":"volcano_name",
                "type":"nominal",
                "title":"Volcano Name"
              },
              {
                "field":"primary_volcano_type",
                "type":"nominal",
                "title":"Volcano Type"
              },
              {
                "field":"elevation",
                "type":"quantitative",
                "title":"Elevation (m)"
              },
              {
                "field":"last_eruption_year",
                "type":"quantitative",
                "title":"Last Eruption Year"
              },
              {
                "field":"population_within_5_km",
                "type":"quantitative",
                "title":"Population within 5km"
              }
            ]
          }
        },
        {
          "mark":{
            "type":"text",
            "align":"right",
            "baseline":"middle",
            "dx":-12,
            "fontSize":11.5,
            "fontStyle":"italic"
          },
          "encoding":{
            "text":{
              "field":"volcano_name",
              "type":"nominal"
            },
            "color":{
              "value":"black"
            },
            "opacity":{
              "condition":{
                "test":"datum.last_eruption_year == 2020 && datum.population_within_5_km >10000",
                "value":1
              },
              "value":0
            }
          }
        }
      ]
    }
  ]
}
